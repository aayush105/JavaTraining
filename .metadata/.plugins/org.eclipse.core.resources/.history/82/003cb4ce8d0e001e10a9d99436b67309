package controlstatements.looping;

public class WhileTest {
	/* -------------------------- while ----------------------
	 * syntax :
	 * 
	 * while(condition){
	 *  // statement
	 *  }
	 */
	
	public static void main(String[] args) {
		int i = 5 ;
		int fact = 0;
		while(i>0) {
			fact += i ;
			i--;
		}
		System.out.println(fact);
	}
}

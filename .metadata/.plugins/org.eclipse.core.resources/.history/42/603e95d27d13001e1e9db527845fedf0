package constructor;

public class Employee {

	String name;
	int EOJ;
	long salary;
	String address;
	
	Employee(){
	}

	Employee(String name, int EOJ, long salary, String address){
		this.name = name;
		this.EOJ = EOJ;
		this.salary = salary;
		this.address = address;
		
	}
	
	void display() {
		System.out.printf("| %-4s | %-8s | %-4s | %-10s | %-6s |%n","Name","Detail","salary","Address");
		
		System.out.printf("| %-4s | %-8s | %-4s | %-10s | %-6s |%n", "SN", "Name","Age","Phone","City");
		System.out.printf("------------------------------------------------%n");
		
	}
}

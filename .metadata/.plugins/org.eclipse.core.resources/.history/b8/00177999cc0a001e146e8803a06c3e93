
public class table {
	public static void main(String[] args) {
		System.out.printf("--------------------------------%n");
		System.out.printf("   Student Detail         %n");
  
		System.out.printf("--------------------------------%n");
		System.out.printf("| %-4s | %-8s | %4s |%n", "SN", "NAME", "BITS");
		System.out.printf("--------------------------------%n");

		System.out.printf("| %-4s | %-8s | %010d |%n", "Floating", "double",  64);
		System.out.printf("| %-4s | %-8s | %010d |%n", "Floating", "float",   32);
		System.out.printf("| %-4s | %-8s | %010d |%n", "Integral", "long",    64);
		System.out.printf("| %-4s | %-8s | %010d |%n", "Integral", "int",     32);
		System.out.printf("| %-4s | %-8s | %010d |%n", "Integral", "char",    16);
	

		System.out.printf("--------------------------------%n");
	}
}
